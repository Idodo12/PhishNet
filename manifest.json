{
    "manifest_version": 3,
    "name": "PhishNet",
    "version": "1.0.0",
    "description": "Check for phishing mails when entering Gmail.",
    "permissions": [
        "tabs",
        "activeTab",
        "https://mail.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    }
}
